<Window
    Height="300"
    Title="Add Account"
    Width="400"
    mc:Ignorable="d"
    x:Class="password.Views.AddAccount"
    x:DataType="vm:AddAccountViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:password.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <StackPanel Margin="20">
        <TextBlock Text="{Binding AccountNameLabel}" />
        <TextBox Text="{Binding AccountName}" />

        <TextBlock Margin="0,10,0,0" Text="{Binding AccountLabel}" />
        <TextBox Text="{Binding Account}" />

        <TextBlock Margin="0,10,0,0" Text="{Binding PasswordLabel}" />
        <TextBox Text="{Binding Password}" />

        <StackPanel
            HorizontalAlignment="Right"
            Margin="0,20,0,0"
            Orientation="Horizontal">
            <Button
                Command="{Binding AddCommand}"
                Content="{Binding Confirm}"
                Margin="0,0,10,0"
                Width="80" />
            <Button
                Command="{Binding CancelCommand}"
                Content="{Binding Cancel}"
                Width="80" />
        </StackPanel>
    </StackPanel>
</Window>