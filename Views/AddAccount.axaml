<Window
    Height="300"
    Title="Add Account"
    Width="400"
    x:Class="password.Views.AddAccount"
    x:DataType="vm:AddAccountViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:vm="using:password.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <StackPanel Margin="20">
        <TextBlock Text="账户名称" />
        <TextBox Text="{Binding AccountName}" />

        <TextBlock Margin="0,10,0,0" Text="账号" />
        <TextBox Text="{Binding Account}" />

        <TextBlock Margin="0,10,0,0" Text="密码" />
        <TextBox Text="{Binding Password}" />

        <StackPanel
            HorizontalAlignment="Right"
            Margin="0,20,0,0"
            Orientation="Horizontal">
            <Button
                Command="{Binding AddCommand}"
                Content="confirm"
                Margin="0,0,10,0"
                Width="80" />
            <Button
                Command="{Binding CancelCommand}"
                Content="cancel"
                Width="80" />
        </StackPanel>
    </StackPanel>
</Window>