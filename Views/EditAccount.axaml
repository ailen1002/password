<Window
    Height="300"
    Title="Edit Account"
    Width="400"
    mc:Ignorable="d"
    x:Class="password.Views.EditAccount"
    x:DataType="vm:EditAccountViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:password.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <StackPanel Margin="20">
        <TextBox Text="{Binding AccountInfo.AccountName}" Watermark="Account Name" />
        <TextBox Text="{Binding AccountInfo.Account}" Watermark="Account" />
        <TextBox Text="{Binding AccountInfo.Password}" Watermark="Password" />
        <StackPanel
            HorizontalAlignment="Right"
            Margin="0,20,0,0"
            Orientation="Horizontal">
            <Button
                Command="{Binding UpdateCommand}"
                Content="confirm"
                Margin="0,0,10,0"
                Width="80" />
            <Button
                Command="{Binding CancelCommand}"
                Content="cancel"
                Width="80" />
        </StackPanel>
    </StackPanel>
</Window>