<Window
    Height="768"
    Title="PasswordManager"
    Width="1024"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d"
    x:Class="password.Views.MainWindow"
    x:DataType="vm:MainWindowViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:password.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DockPanel LastChildFill="True">
        <DockPanel
            Background="{Binding PanelBackground}"
            DockPanel.Dock="Top"
            Height="50">
            <StackPanel
                HorizontalAlignment="Right"
                Orientation="Horizontal"
                VerticalAlignment="Center">
                <Button
                    Command="{Binding ChangeLanguageCommand}"
                    Content="{Binding LanguageButtonText}"
                    Height="30"
                    HorizontalContentAlignment="Center"
                    Margin="0,0,10,0"
                    VerticalAlignment="Center"
                    Width="40" />
                <ToggleButton
                    BorderBrush="White"
                    BorderThickness="2"
                    Height="30"
                    IsChecked="{Binding IsDarkMode}"
                    Margin="0,0,10,0"
                    Width="30" />
                <Button
                    Background="Transparent"
                    Command="{Binding ShowAccountInfoCommand}"
                    Height="40"
                    HorizontalAlignment="Center"
                    Margin="0,0,10,0"
                    Name="UserIconButton"
                    VerticalAlignment="Center"
                    Width="40">
                    <!--  ä½¿ç”¨ç¬¦å·æˆ–å›¾æ ‡åº“æ˜¾ç¤ºç”¨æˆ·å›¾æ ‡ï¼Œä¾‹å¦‚ FontAwesome  -->
                    <TextBlock FontSize="18" Text="ðŸ‘¤" />
                </Button>
            </StackPanel>
        </DockPanel>
        <!--  æŠ½å±‰é¢æ¿ï¼šåœ¨å³ä¾§æ˜¾ç¤ºçš„è´¦æˆ·ä¿¡æ¯é¢æ¿  -->
        <Border
            Background="White"
            HorizontalAlignment="Right"
            IsVisible="{Binding IsAccountInfoVisible}"
            Name="AccountInfoDrawer"
            VerticalAlignment="Stretch"
            Width="300">
            <!--  è¿™é‡Œæ˜¯è´¦æˆ·ä¿¡æ¯å†…å®¹  -->
            <StackPanel Margin="10">
                <TextBlock
                    FontSize="18"
                    FontWeight="Bold"
                    Text="è´¦æˆ·ä¿¡æ¯" />
                <TextBlock Margin="0,10,0,0" Text="{Binding UserName}" />
                <Button
                    Command="{Binding LogoutCommand}"
                    Content="æ³¨é”€"
                    Margin="0,20,0,0" />
            </StackPanel>
        </Border>
        <Grid>
            <DataGrid
                AutoGenerateColumns="False"
                GridLinesVisibility="All"
                HorizontalAlignment="Stretch"
                IsReadOnly="True"
                ItemsSource="{Binding Accounts}"
                SelectedItem="{Binding SelectedAccount}"
                VerticalAlignment="Stretch">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Id}" Header="ID" />
                    <DataGridTextColumn Binding="{Binding AccountName}" Header="Account Name" />
                    <DataGridTextColumn Binding="{Binding Account}" Header="Account" />
                    <DataGridTextColumn Binding="{Binding Password}" Header="Password" />
                    <DataGridTextColumn Binding="{Binding CreationDate}" Header="Creation Date" />
                    <DataGridTextColumn Binding="{Binding LastUpdated}" Header="Update Date" />
                </DataGrid.Columns>
            </DataGrid>

            <!--  æŒ‰é’®åŒºåŸŸ  -->
            <StackPanel
                HorizontalAlignment="Right"
                Margin="10"
                Orientation="Horizontal"
                VerticalAlignment="Bottom">
                <Button
                    Command="{Binding EditCommand}"
                    Content="{Binding Edit}"
                    Margin="5,0" />
                <Button
                    Command="{Binding DeleteCommand}"
                    Content="{Binding Delete}"
                    Margin="5,0" />
                <Button
                    Command="{Binding ShowAddAccountWindowCommand}"
                    Content="{Binding Add}"
                    Margin="5,0" />
            </StackPanel>

            <!--  å·¦ä¸‹è§’æŒ‰é’®  -->
            <StackPanel
                HorizontalAlignment="Left"
                Margin="10"
                Orientation="Horizontal"
                VerticalAlignment="Bottom">
                <Button
                    Command="{Binding ImportCommand}"
                    Content="{Binding Import}"
                    Margin="5,0" />
                <Button
                    Command="{Binding ExportCommand}"
                    Content="{Binding Export}"
                    Margin="5,0" />
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>